<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @product %>
     <% if @product.deleted_at.nil? %>
      <div class="inline-block ml-2">
        <%= link_to 'Delete Product', product_delete_comment_path(@product.id), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
      <% else %>
      <div class="inline-block ml-2">
      <p> Reason for Deletion: </p>
      <p><%= @product.delete_comment %> </p>
      <%= button_to 'Restore Product', product_undelete_path(@product.id), method: :put, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </div>
     <% end %>
     <%= link_to 'Edit this product', edit_product_path(@product), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

    <%= link_to 'Back to products', products_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
